{% extends 'base.html.twig' %}

{% block title %}
	Création d'une annonce
{% endblock %}

{% form_theme form _self %}

{% block body %}

	<div class="container">
		<h1>Créér une nouvelle annonce</h1>

		{{ form_start(form) }}

		{{ form_widget(form) }}

		<button type="submit" class="btn btn-primary">Créer la nouvelle annonce</button> 

		{{ form_end(form) }}
	</div>
	
{% endblock %}

{% block form_row %}
	<div class="form-group">
		{{ form_label(form) }}
		{{ form_widget(form) }}
	</div>
{% endblock %}

{% block text_widget %}
	<input type="text" name="{{full_name}}" id="{{id}}" class="form-control">
{% endblock %}

{% block url_widget %}

{% endblock %}

{% block textarea_widget %}

{% endblock %}