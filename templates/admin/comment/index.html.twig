{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commententaires{% endblock %}

{% block body %}
<div class="container-fluid">
	<h1 class="my-5">Administration des commentaires</h1>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Date</th>
				<th>Auteur</th>
				<th>Commentaire</th>
				<th class="text-center">Note</th>
				<th>Annonce</th>
				<th>Action</th>
			</tr>
		</thead>

		<tbody>
			{% for comment in comments %}
			<tr>
				<td>{{comment.id}}</td>
				<td>{{comment.createdAt | date('d/m/Y')}}</td>
				<td>
					<img src="{{comment.author.picture}}" alt="Avatar de {{comment.author.fullName}}" class="avatar avatar-micro mr-2">{{comment.author.fullName}}
				</td>
				<td>{{comment.content}}</td>
				<td>
					<span class="badge badge-primary rounded">{{comment.rating}}</span>
				</td>
				<td>{{comment.ad.title }}</td>
				<td>
					<a href="{{ path('admin_comments_edit', {'id': comment.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
					<a href="{{ path('admin_comments_delete', {'id': comment.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
